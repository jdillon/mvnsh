<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.sonatype.buildsupport</groupId>
        <artifactId>public-parent</artifactId>
        <version>9</version>
        <relativePath/>
    </parent>

    <groupId>org.sonatype.maven.shell</groupId>
    <artifactId>mvnsh</artifactId>
    <name>${project.groupId}:${project.artifactId}</name>
    <version>1.2.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <organization>
        <name>Sonatype</name>
        <url>http://sonatype.org</url>
    </organization>

    <licenses>
        <license>
            <name>Eclipse Public License</name>
            <url>http://www.eclipse.org/legal/epl-v10.html</url>
        </license>
        <license>
            <name>Apache License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <url>https://github.com/jdillon/mvnsh</url>

    <scm>
        <connection>scm:git:git://github.com/jdillon/mvnsh.git</connection>
        <developerConnection>scm:git:ssh://git@github.com/jdillon/mvnsh.git</developerConnection>
        <url>https://github.com/jdillon/mvnsh</url>
    </scm>

    <issueManagement>
        <system>Github</system>
        <url>https://github.com/jdillon/mvnsh/issues</url>
    </issueManagement>

    <developers>
        <developer>
            <id>jdillon</id>
            <name>Jason Dillon</name>
            <email>jason@planet57.com</email>
            <roles>
                <role>Build Master</role>
                <role>Developer</role>
            </roles>
        </developer>
        <developer>
            <id>adreghiciu</id>
            <name>Alin Dreghiciu</name>
            <email>adreghiciu@gmail.com</email>
            <roles>
                <role>Distribution Master</role>
            </roles>
        </developer>
    </developers>

    <properties>
        <maven.compiler.source>1.6</maven.compiler.source>
        <maven.compiler.target>1.6</maven.compiler.target>

        <gshell.version>2.7.0-SNAPSHOT</gshell.version>
        <apache-maven.version>3.3.9</apache-maven.version>
    </properties>

    <!--
    repository.sonatype.org has staging rules which presently disallow these repositories to be configured on a release (stupid).

    <repositories>
        <repository>
            <id>sonatype-public-grid</id>
            <url>http://repository.sonatype.org/content/groups/sonatype-public-grid</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>sonatype-public-grid</id>
            <url>http://repository.sonatype.org/content/groups/sonatype-public-grid</url>
        </pluginRepository>
    </pluginRepositories>
    -->

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.sonatype.gshell</groupId>
                <artifactId>gshell</artifactId>
                <type>pom</type>
                <version>${gshell.version}</version>
                <scope>import</scope>
            </dependency>

            <dependency>
                <groupId>org.sonatype.gshell</groupId>
                <artifactId>gshell-core</artifactId>
                <version>${gshell.version}</version>
                <exclusions>
                    <exclusion>
                        <groupId>com.google.inject</groupId>
                        <artifactId>guice</artifactId>
                    </exclusion>
                </exclusions>
            </dependency>

            <dependency>
                <groupId>org.apache.maven</groupId>
                <artifactId>maven</artifactId>
                <type>pom</type>
                <version>${apache-maven.version}</version>
                <scope>import</scope>
            </dependency>

            <!-- INTERNAL -->

            <dependency>
                <groupId>org.sonatype.maven.shell</groupId>
                <artifactId>mvnsh-bootstrap</artifactId>
                <version>1.2.0-SNAPSHOT</version>
            </dependency>

            <dependency>
                <groupId>org.sonatype.maven.shell</groupId>
                <artifactId>mvnsh-maven</artifactId>
                <version>1.2.0-SNAPSHOT</version>
            </dependency>

            <dependency>
                <groupId>org.sonatype.maven.shell</groupId>
                <artifactId>mvnsh-archetype</artifactId>
                <version>1.2.0-SNAPSHOT</version>
            </dependency>

            <dependency>
                <groupId>org.sonatype.maven.shell</groupId>
                <artifactId>mvnsh-nexus</artifactId>
                <version>1.2.0-SNAPSHOT</version>
            </dependency>

            <dependency>
                <groupId>org.sonatype.maven.shell</groupId>
                <artifactId>mvnsh-personality</artifactId>
                <version>1.2.0-SNAPSHOT</version>
            </dependency>

            <dependency>
                <groupId>org.sonatype.maven.shell.dist</groupId>
                <artifactId>mvnsh-assembly</artifactId>
                <version>1.2.0-SNAPSHOT</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <modules>
        <module>mvnsh-commands</module>
        <module>mvnsh-bootstrap</module>
        <module>mvnsh-personality</module>
        <module>mvnsh-dist</module>
    </modules>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <executions>
                    <execution>
                        <id>enforce-versions</id>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <requireMavenVersion>
                                    <version>[3.0,)</version>
                                </requireMavenVersion>
                                <requireJavaVersion>
                                    <version>[1.6,)</version>
                                </requireJavaVersion>
                                <!--<bannedDependencies>-->
                                    <!--<excludes>-->
                                        <!--<exclude>org.codehaus.plexus:plexus-container-default</exclude>-->
                                        <!--<exclude>org.sonatype.spice:spice-inject-plexus</exclude>-->
                                        <!--<exclude>com.google.inject:guice</exclude>-->
                                    <!--</excludes>-->
                                <!--</bannedDependencies>-->
                            </rules>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.eclipse.sisu</groupId>
                <artifactId>sisu-maven-plugin</artifactId>
                <version>0.3.3</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>main-index</goal>
                            <goal>test-index</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>animal-sniffer-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>check</goal>
                        </goals>
                        <configuration>
                            <signature>
                                <groupId>org.codehaus.mojo.signature</groupId>
                                <artifactId>java16</artifactId>
                                <version>1.1</version>
                            </signature>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <configuration>
                    <useReleaseProfile>false</useReleaseProfile>
                    <goals>deploy</goals>
                    <arguments>-B -Prelease</arguments>
                    <autoVersionSubmodules>true</autoVersionSubmodules>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
